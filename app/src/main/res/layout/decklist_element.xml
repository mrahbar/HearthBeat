<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/spacing_medium">

        <ImageView
            android:id="@+id/deck_class_image"
            android:layout_width="@dimen/touchfriendly_intermediate_size"
            android:layout_height="@dimen/touchfriendly_intermediate_size"
            android:src="@drawable/ic_class_priest" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/spacing_medium"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:layout_toRightOf="@id/deck_class_image">

            <TextView
                android:id="@+id/deck_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_intermediate"
                android:textColor="@color/default_black_color"
                tools:text="Deck name" />

            <TextView
                android:id="@+id/deck_winrate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/spacing_medium"
                android:textSize="@dimen/text_size_medium"
                android:textColor="@color/default_header_color"
                tools:text="40% | 10 - 20" />
        </LinearLayout>

    </RelativeLayout>


</android.support.v7.widget.CardView>