<?xml version="1.0" encoding="utf-8"?>

<com.smartsoftware.android.hearthbeat.ui.widget.FourThreeLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/story_title_background"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:foreground="@drawable/post_foreground_selector"
    android:background="@color/twitch_news"
    android:orientation="vertical"
    android:stateListAnimator="@animator/raise"
    android:theme="@style/PlaidDarkOverlay">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <com.smartsoftware.android.hearthbeat.ui.widget.FourThreeImageView
            android:id="@+id/twitch_post_preview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@color/icy_dark_bg_color"
            android:orientation="vertical">

            <com.smartsoftware.android.hearthbeat.ui.widget.BaselineGridTextView
                android:id="@+id/twitch_post_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/spacing_medium"
                android:singleLine="true"
                android:ellipsize="end"
                tools:text="C9 Kolento constructed"
                style="@style/Widget.HeartBeat.TilePrimary" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:orientation="horizontal">

                <com.smartsoftware.android.hearthbeat.ui.widget.BaselineGridTextView
                    android:id="@+id/twitch_post_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|end"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:paddingStart="@dimen/spacing_medium"
                    tools:text="Kolento"
                    style="@style/Widget.HeartBeat.TileSecondary" />

                <View
                    android:layout_width="0dip"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <com.smartsoftware.android.hearthbeat.ui.widget.BaselineGridTextView
                    android:id="@+id/twitch_post_viewers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|end"
                    android:drawablePadding="@dimen/spacing_medium"
                    android:gravity="center_vertical"
                    android:paddingEnd="@dimen/spacing_medium"
                    android:drawableStart="@drawable/ic_viewer_small"
                    tools:text="1234"
                    style="@style/Widget.HeartBeat.TileSecondary" />
            </LinearLayout>
        </LinearLayout>

    </FrameLayout>

</com.smartsoftware.android.hearthbeat.ui.widget.FourThreeLinearLayout>
