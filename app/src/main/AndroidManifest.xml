<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.smartsoftware.android.hearthbeat">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".main.MainApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/HeartBeat.Theme">
        <activity android:name=".main.LaunchActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".main.FeedActivity"/>
        <activity android:name=".main.CollectionActivity"/>
        <activity android:name=".main.SingleCardActivity"
            android:theme="@style/HeartBeat.Theme.SingleCard"/>
    </application>

</manifest>
